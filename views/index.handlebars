<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1>The Burger I Want!</h1>
      <form id="orderForm">
        <textarea type="text" name="burger" id="order"></textarea>
        <button type="submit">Order</button>
      </form>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <h3>Available Burgers</h3>
      {{#each burger}}
      <p>{{this.id}}. {{this.burger_name}}</p>
      {{/each}}
      </ul>
    </div>
  </div>
</div>

<script type="text/javascript">
  //When the submit button is clicked it gets the user input and finds the best match
  $("#orderForm").on('submit', function (event) {
    event.preventDefault();
    var newBurger = {
      name: $("#order").val().trim(),
      devoured: false
    };

    console.log($("#order").val().trim())

    // Send the POST request.
    $.ajax("/api/burger", {
      type: "POST",
      data: newBurger
    }).then(
      function () {
        console.log("created new burger");
        // Reload the page to get the updated list
        location.reload();
      }
    );
  });
</script>